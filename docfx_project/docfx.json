{
    "metadata": [
        {
            "src": [
                {
                    "files": [
                        "src/Documentation.Solution.sln"
                    ]
                }
            ],
            "dest": "api",
            "disableGitFeatures": false,
            "disableDefaultFilter": false
        }
    ],
    "build": {
        "sitemap": {
            "baseUrl": "https://docs.perpetualintelligence.com",
            "priority": 0.1,
            "changefreq": "monthly"
        },
        "content": [
            {
                "files": [
                    "api/**.yml",
                    "api/index.md"
                ]
            },
            {
                "files": [
                    "articles/**.md",
                    "articles/**/toc.yml",
                    "toc.yml",
                    "*.md"
                ]
            }
        ],
        "resource": [
            {
                "files": [
                    "images/**"
                ]
            },
            {
                "files": [
                    "CNAME"
                ]
            }
        ],
        "overwrite": [
            {
                "files": [
                    "apidoc/**.md"
                ],
                "exclude": [
                    "obj/**",
                    "_site/**"
                ]
            }
        ],
        "dest": "_site",
        "globalMetadata": {
            "_appFooter": "Copyright &copy; Perpetual Intelligence&reg; L.L.C. All Rights Reserved",
            "_appLogoPath": "images/logo.ico",
            "_appFaviconPath": "images/favicon.ico",
            "_enableSearch": true
        },
        "fileMetadataFiles": [],
        "template": [
            "default",
            "modern"
        ],
        "xrefService": [
            "https://xref.docs.microsoft.com/query?uid={uid}"
        ],
        "postProcessors": [],
        "markdownEngineName": "markdig",
        "noLangKeyword": false,
        "keepFileLink": false,
        "cleanupCacheHistory": true,
        "disableGitFeatures": false
    },
    "pdf": {
        "noStdin": true,
        "content": [
            {
                "files": [
                    "api/**.yml"
                ],
                "exclude": [
                    "**/toc.yml",
                    "**/toc.md"
                ]
            },
            {
                "files": [
                    "articles/**.md",
                    "articles/**/toc.yml",
                    "toc.yml",
                    "*.md",
                    "pdf/*"
                ],
                "exclude": [
                    "**/bin/**",
                    "**/obj/**",
                    "_site_pdf/**",
                    "**/toc.yml",
                    "**/toc.md"
                ]
            },
            {
                "files": "pdf/toc.yml"
            }
        ],
        "resource": [
            {
                "files": [
                    "images/**"
                ],
                "exclude": [
                    "**/bin/**",
                    "**/obj/**",
                    "_site_pdf/**"
                ]
            }
        ],
        "overwrite": [
            {
                "files": [
                    "apidoc/**.md"
                ],
                "exclude": [
                    "**/bin/**",
                    "**/obj/**",
                    "_site_pdf/**"
                ]
            }
        ],
        "wkhtmltopdf": {
            "additionalArguments": "--enable-local-file-access"
        },
        "dest": "_site_pdf"
    }
}
