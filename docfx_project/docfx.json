{
    "metadata": [
        {
            "src": [
                {
                    "files": [
                        "src/PerpetualIntelligence.Docs.Solution.sln"
                    ]
                }
            ],
            "dest": "api",
            "disableGitFeatures": false,
            "disableDefaultFilter": false
        }
    ],
    "build": {
        "content": [
            {
                "files": [
                    "api/**.yml",
                    "api/index.md"
                ]
            },
            {
                "files": [
                    "articles/**.md",
                    "articles/**/toc.yml",
                    "toc.yml",
                    "*.md"
                ]
            }
        ],
        "resource": [
            {
                "files": [
                    "images/**"
                ]
            },
            {
                "files": [
                    "CNAME"
                ]
            }
        ],
        "overwrite": [
            {
                "files": [
                    "apidoc/**.md"
                ],
                "exclude": [
                    "obj/**",
                    "_site/**"
                ]
            }
        ],
        "dest": "_site",
        "globalMetadataFiles": [ "globalMetadata.json" ],
        "fileMetadataFiles": [],
        "template": [
            "default",
            "templates/material"
        ],
        "xrefService": [
            "https://xref.docs.microsoft.com/query?uid={uid}"
        ],
        "postProcessors": [],
        "markdownEngineName": "markdig",
        "noLangKeyword": false,
        "keepFileLink": false,
        "cleanupCacheHistory": true,
        "disableGitFeatures": false
    },
    "pdf": {
        "noStdin": true,
        "content": [
            {
                "files": [
                    "api/**.yml"
                ],
                "exclude": [
                    "**/toc.yml",
                    "**/toc.md"
                ]
            },
            {
                "files": [
                    "articles/**.md",
                    "articles/**/toc.yml",
                    "toc.yml",
                    "*.md",
                    "pdf/*"
                ],
                "exclude": [
                    "**/bin/**",
                    "**/obj/**",
                    "_site_pdf/**",
                    "**/toc.yml",
                    "**/toc.md"
                ]
            },
            {
                "files": "pdf/toc.yml"
            }
        ],
        "resource": [
            {
                "files": [
                    "images/**"
                ],
                "exclude": [
                    "**/bin/**",
                    "**/obj/**",
                    "_site_pdf/**"
                ]
            }
        ],
        "overwrite": [
            {
                "files": [
                    "apidoc/**.md"
                ],
                "exclude": [
                    "**/bin/**",
                    "**/obj/**",
                    "_site_pdf/**"
                ]
            }
        ],
        "wkhtmltopdf": {
            "additionalArguments": "--enable-local-file-access"
        },
        "dest": "_site_pdf",
        "template": [
            "pdf.default",
            "pluginPackages/rest.tagpage.2.59.2/content"
        ]
    }
}
